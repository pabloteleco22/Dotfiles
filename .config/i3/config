# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        bindsym control+$left resize shrink width 10 px or 1 ppt
        bindsym control+$down resize grow height 10 px or 1 ppt
        bindsym control+$up resize shrink height 10 px or 1 ppt
        bindsym control+$right resize grow width 10 px or 1 ppt

        bindsym $left resize shrink width 100 px or 10 ppt
        bindsym $down resize grow height 100 px or 10 ppt
        bindsym $up resize shrink height 100 px or 10 ppt
        bindsym $right resize grow width 100 px or 10 ppt

        bindsym Shift+$left  move left 100 px
        bindsym Shift+$down  move down 100 px
        bindsym Shift+$up    move up 100 px
        bindsym Shift+$right move right 100 px

        bindsym control+Shift+$left  move left 10 px
        bindsym control+Shift+$down  move down 10 px
        bindsym control+Shift+$up    move up 10 px
        bindsym control+Shift+$right move right 10 px

        # change focus between tiling / floating windows
        bindsym space focus mode_toggle

        # toggle tiling / floating
        bindsym Shift+space floating toggle

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

