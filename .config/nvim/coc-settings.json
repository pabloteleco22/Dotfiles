{
    "languageserver": {
        "lua":{
            "command": "lua-language-server",
            "filetypes": ["lua"],
            "settings": {
                "Lua": {
                    "diagnostics": {
                        "globals": ["vim"]
                    },
                    "workspace": {
                        "library": [
                            "/usr/share/nvim/runtime/lua",
                            "/usr/share/nvim/runtime/lua/vim/lsp"
                        ],
                        "checkThirdParty": false
                    }
                }
            }
        },
        "digestif":{
            "command": "digestif",
            "filetypes": ["tex", "plaintex", "context"]
        }
    }
}
